@model AppRestaurantSiglo21.Models.PROVEEDOR

@{
    ViewBag.Title = "Delete";
    Layout = Session["Layout"].ToString();
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Eliminar proveedor</h4>
        </div>
    </div>
    <br />

    <div class="alert alert-danger" role="alert">
        <h5>¿ Estas seguro de eliminar registro ?</h5>
    </div>

    <br />
    <div>        
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Rut Proveedor
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RUTPROVEEDOR) - @Html.DisplayFor(model => model.DVPROVEEDOR)
            </dd>

            <dt>
                Proveedor
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NOMPROV)
            </dd>



        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-lg btn-danger btn-block">Eliminar</button>
            </div>
            <br />
            <br />
            <div> @Html.ActionLink("Volver atrás", "Index", null, new { @class = "btn btn-secondary" })</div>
        }
    </div>
