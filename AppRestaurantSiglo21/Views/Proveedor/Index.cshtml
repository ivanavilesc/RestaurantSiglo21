@model IEnumerable<AppRestaurantSiglo21.Models.PROVEEDOR>


<div class="container">


    <div class="card text-center">
        <div class="card-body">
            <h4>Listado Proveedores</h4>
        </div>
    </div>
    <br />

    <p>
        @Html.ActionLink("Crear Proveedor", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />    
    <table class="table" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif">
        <tr>
            <th>
                Rut Proveedor
            </th>
            <th>
                Nombre Proveedor
            </th>
            <th>
                Fono Contacto
            </th>
            <th>
                Tipo Proveedor
            </th>

            <th>
                Estado Proveedor
            </th>
        </tr>
        @foreach (var prov in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(model => prov.RUTPROVEEDOR) - @Html.DisplayFor(model => prov.DVPROVEEDOR)
            </td>
            <td>
                @Html.DisplayFor(model => prov.NOMPROV)
            </td>
            <td>
                @Html.DisplayFor(model => prov.FONO)
            </td>
            <td>
                @Html.DisplayFor(model => prov.DESCTIPOPROVEEDOR)
                @*@Html.DropDownListFor(model => model.IDESTADOMESA, listado)*@
            </td>
            <td>
                @Html.DisplayFor(model => prov.ESTADOPROVEEDOR.DESCESTPRO)
                @*@Html.DropDownListFor(model => model.IDESTADOMESA, listado)*@
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = prov.IDPROVEEDOR }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Detail", new { id = prov.IDPROVEEDOR }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = prov.IDPROVEEDOR }, new { @class = "btn btn-danger" })
            </td>

        </tr>
        }
    </table>
</div>
