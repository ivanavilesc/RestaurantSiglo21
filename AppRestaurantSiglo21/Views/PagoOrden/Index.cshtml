@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PrincipalAdmin.cshtml";
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Pagar Cuenta</h4>
        </div>
    </div>
    <br />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <form action="/PagoOrden/ConsultaOrden" method="post">
            <div class="form-horizontal">


            <div class="form-group">

                <div class="col-md-10">
                    <label for="NumeroOrden">Numero Orden  :  <input type="number" class="form-control" name="nrorden" id="nrorden" placeholder="Número Orden" required></label>
                </div>
            </div>

            <div class="form-group">
                <div class="row">

                    <div class="col-md-offset-2 col-md-5">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Validar Orden</button>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <div> @Html.ActionLink("Volver atrás", "Index", null, new { @class = "btn btn-secondary" })</div>
            </div>
        </form>
    }


</div>