@model IEnumerable<AppRestaurantSiglo21.Models.VistaDetOrdenes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PrincipalAdmin.cshtml";
}

<div class="container">


    <div class="card text-center">
        <div class="card-body">
            <h4>Listado Ordenes Pendientes</h4>
        </div>
    </div>
    <br />

    <p>
        @Html.ActionLink("Ver Orden", "Index", null, new { @class = "btn btn-primary" });
    </p>


    <table class="table" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif">
        <tr>
            <th>
                Orden
            </th>
            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio por Producto
            </th>
            <th>
                Total Producto
            </th>
            @*<th>
                Total Producto
            </th>*@

        </tr>
        
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelOrden => item.IdOrden1)
            </td>
            <td>
                @Html.DisplayFor(modelOrden => item.DescProducto1)
            </td>
            <td>
                @Html.DisplayFor(modelOrden => item.Cantidad1)
            </td>
            <td>
                @Html.DisplayFor(modelOrden => item.PrecioProducto1)
            </td>
            <td>
                @Html.DisplayFor(modelOrden => item.Total1)
            </td>
            @*<td>
                @Html.DropDownListFor(modelOrden => item.Combobox1,new SelectList(ViewBag.ComboBox, "Id1", "Descripcion1"))
            </td>*@
           

        </tr>

        }
        <tr>

            <td align="center">
                <strong>Total Price :@ViewBag.TotalPrice</strong>
                
            </td>
            <td>
                @Html.ActionLink("Pagar", "Pagar", new { id = Model.First().IdOrden1 }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    </table>
</div>

