    <div class="container-contact3">
        <div class="wrap-contact3">
            <form class="contact3-form validate-form" method="post" action="SendEmail">
                <span class="contact3-form-title">
                    Reserva una mesa
                </span>
                <label for="nombrecliente">Rut</label>
                <div class="row">

                    <div class="form-group wrap-input3 col-lg-9">
                        <input type="text" class="form-control" id="rutcliente" name="rutcliente" placeholder="solo digitos">
                    </div>
                    <div class="form-group wrap-input3 col-lg-3 ">
                        <input type="text" class="form-control" id="dvcliente" name="dvcliente" placeholder="dv">
                    </div>
                </div>

                <div class="form-group wrap-input3">
                    <label for="nombrecliente">Nombre</label>
                    <input type="text" class="form-control" id="nombrecliente" name="nombrecliente" placeholder="ingresa tu nombre">
                </div>

                <div class="form-group wrap-input3">
                    <label for="apellidocliente">Apellido</label>
                    <input type="text" class="form-control" id="apellidocliente" name="apellidocliente" placeholder="ingresa tu apellido">
                </div>

                <div class="form-group wrap-input3">
                    <label for="receiver">Correo electrónico</label>
                    <input type="email" class="form-control" id="receiver" name="receiver" placeholder="tucuenta@correo.com">
                </div>

                <div class="form-group wrap-input3">
                    <label for="fonocliente">Tel. Móvil</label>
                    <input type="text" class="form-control" id="fonocliente" name="fonocliente" placeholder="ingresa tu número de celular">
                </div>

