<div class="breadcrumb"><h2>Ingresa una reversa</h2> </div>

<br />
<br />
@if (ViewBag.Error != null)
{<h2> @ViewBag.Error </h2>}
<form method="post" action="SendEmail">
    <div class="container">
        <span class="form-control-static"></span>
        <input class="form-control" type="text" name="subject" value="Restaurant Siglo XXI - Confirmación de Reserva" readonly />
        <br />
        <span class="form-control-static"> Su nombre : </span>
        <input class="form-control" type="text" name="nombrecliente" />
        <br />

        <div class="form">
            Date using attribute: <input type="text" class="form-control" style="width: 500px;" data-provide="datepicker" placeholder="enter the date mijo ">
        </div>

        <span class="form-control-static"> Correo Electronico : </span>
        <input class="form-control" type="text" name="receiver" />
        <br />

        <div class="form-group">
            <label for="message">Indicaciones de la reserva:</label>
            <textarea class="form-control" id="message" name="message" rows="3"></textarea>
        </div>
        <input class="btn btn-primary" type="submit" value="Reservar" />
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
