@model IEnumerable<AppRestaurantSiglo21.Models.ListaReservaViewModel>

@{
    ViewBag.Title = "Home Page";
    Layout = Session["Layout"].ToString();
}

<link href="~/Content/css/BuscarReserva.css" rel="stylesheet" />
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Reserva de Mesas</h4>
        </div>
    </div>
    <br />
    <div class="alert alert-info" role="alert">
        <strong>Bienvenido !</strong> Consulta aquí la reserva realizada.
    </div>

    <form action="" method="post">
        <div class="row">
            <div class="input-group md-form form-sm form-2 pl-0">
                <input class="form-control my-0 py-1 col-4" type="number" id="nroReserva" name="nroReserva" placeholder="Numero de reserva" aria-label="Search" required>
                &nbsp;<button type="submit" class="btn btn-info">Buscar</button>
                <div class="input-group-append">
                    <span class="input-group-text red lighten-3" id="basic-text1">
                        <i class="fas fa-search text-grey"
                           aria-hidden="true">Nro de Reserva</i>
                    </span>
                </div>
            </div>
        </div>
    </form>
    <br />
    @if (Model != null)
    {
        <div>
            <h4>Detalle de Reservas Abiertas</h4>
            <hr />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nro.reserva</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Fono</th>
                        <th scope="col">Cant.Personas</th>
                        <th scope="col">Mensaje/Indicaciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDRESERVA)
                            </td>
                            <td>
                                @{
                                    DateTime date = (DateTime)item.FECHARESERVA;
                                    string fecha = date.Day.ToString()+"/"+ date.Month.ToString() + "/"+date.Year.ToString();
                                        }@fecha
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HORARESERVA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.APELLIDOPATERNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FONO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CANTIDADCLIENTE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MSGRESERVA)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />

        </div>
    }

</div>
