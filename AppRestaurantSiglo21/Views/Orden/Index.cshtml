
@model IEnumerable<AppRestaurantSiglo21.Models.OrdenViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div class="container">


    <div class="card text-center">
        <div class="card-body">
            <h4>Listado de Ordenes en la cocina</h4>
        </div>
    </div>
    <br />

    <p>
        @Html.ActionLink("Crear Registro", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif">
        <tr>
            <th>
                Nro de Orden
            </th>
            <th>
                Estado Orden
            </th>
            <th>
                Mesa
            </th>
            <th>
                Platillo
            </th>
            <th>
                Cantidad
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.NroOrden)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DescEstOrden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescMesa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantProducto)
                </td>

            </tr>
        }

    </table>
</div>

