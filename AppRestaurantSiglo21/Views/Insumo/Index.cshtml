@model IEnumerable<AppRestaurantSiglo21.Models.INSUMO>

@{
    ViewBag.Title = "Index";
    Layout = Session["Layout"].ToString();
}
<div class="container">


    <div class="card text-center">
        <div class="card-body">
            <h4>Listado de Insumos</h4>
        </div>
    </div>
    <br />


    <p>
        @Html.ActionLink("Crear Registro", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(x => x.IDINSUMO)
                </th>*@
            <th>
                Insumo
                @*@Html.DisplayNameFor(x => x.DESCINSUMO)*@
            </th>
            <th>
                Precio Insumo
                @*@Html.DisplayNameFor(x => x.PRECIOINSUMO)*@
            </th>
        </tr>
        @foreach (var ins in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(x => ins.IDINSUMO)
                    </td>*@
                <td>
                    @Html.DisplayFor(x => ins.DESCINSUMO)
                </td>
                <td>
                    @Html.DisplayFor(x => ins.PRECIOINSUMO)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = ins.IDINSUMO }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalles", "Detail", new { id = ins.IDINSUMO }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = ins.IDINSUMO }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>