            @Html.EditorFor(model => model.IDLOCAL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDLOCAL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

