@model AppRestaurantSiglo21.Models.MESA
<!--//AQUI ARRIBA SE LE INDICA A LA VISTA QUE USE DEL MODELO EL TIPO DE PRODUCTO SI RECIBE DATOS-->

@{
    ViewBag.Title = "EditMesa";
