@model AppRestaurantSiglo21.Models.MESA

@{
    ViewBag.Title = "Delete";
    Layout = Session["Layout"].ToString();
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Eliminar Mesa</h4>
        </div>
    </div>
    <br />

    <div class="alert alert-danger" role="alert">
        <h5>¿ Estas seguro de eliminar este registro ?</h5>
    </div>

    <div>        
        <hr />
        <dl class="dl-horizontal">
            <dt>Mesa</dt>
            <dd>@Html.DisplayFor(model => model.DESCMESA)</dd>

            <dt>Capacidad</dt>
            <dd>@Html.DisplayFor(model => model.CAPACIDAD)</dd>

            <dt>Estado Mesa</dt>
            <dd>@Html.DisplayFor(model => model.ESTADOMESA.DESCESTADOMESA)</dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-lg btn-danger btn-block">Eliminar</button>
            </div>
            <br />
            <br />
            <div> @Html.ActionLink("Volver atrás", "Index", null, new { @class = "btn btn-secondary" })</div>
        }
    </div>
</div>