@model AppRestaurantSiglo21.Models.MESA
<!--//AQUI ARRIBA SE LE INDICA A LA VISTA QUE USE DEL MODELO LA TABLA MESA SI RECIBE DATOS-->

@{
    ViewBag.Title = "Edit";
    Layout = Session["Layout"].ToString();
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Editar Mesa</h4>
        </div>
    </div>
    <br />

    @using (Html.BeginForm())
    {
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- ES SOLO UN VALIDADOR DE TEXTO -->
        <!-- ENVÍO COMO ATRIBUTO OCULTO EL VALOR CORRESPONDIENTE A LAS PK Y FK -->
        @Html.HiddenFor(model => model.IDMESA)
        @Html.HiddenFor(model => model.IDLOCAL)

        <div class="form-group">

            <!-- EN ESTE FORM-GROUP ESTÁ EL LABEL, TEXTBOX Y MENSAJE DE VALIDACIÓN DEL CAMPO DESCMESA -->
            Mesa
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCMESA, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.DESCMESA, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <!-- EN ESTE FORM-GROUP ESTÁ EL LABEL, TEXTBOX Y MENSAJE DE VALIDACIÓN DEL CAMPO CAPACIDAD -->
            Capcidad
            <div class="col-md-10">
                @Html.EditorFor(model => model.CAPACIDAD, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1", @value = "0", @required = "required" } })
                @Html.ValidationMessageFor(model => model.CAPACIDAD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Estado Mesa
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.IDESTADOMESA, new SelectList(ViewBag.EstadoMesas, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "idEstPropuesta", @required = "required" })
                @Html.ValidationMessageFor(model => model.IDESTADOMESA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Local
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.IDLOCAL, new SelectList(ViewBag.Local, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "idEstPropuesta", @required = "required" })
                @Html.ValidationMessageFor(model => model.IDLOCAL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Guardar</button>
            </div>
        </div>

    </div>
    } <!--AQUI TERMINA EL FORM QUE ENVÍA POR METODO POST-->

    <div> @Html.ActionLink("Volver atrás", "Index", null, new { @class = "btn btn-secondary" })</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>