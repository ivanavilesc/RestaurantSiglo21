@model AppRestaurantSiglo21.Models.MESA


@{
    ViewBag.Title = "Create";
    Layout = Session["Layout"].ToString();
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h4>Guardar Mesa</h4>
        </div>
    </div>
    <br />

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mesa
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DESCMESA, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @*@Html.TextBoxFor(x => x.DESCMESA, new { htmlAttributes = new { @class = "form-control", @required = "required" } })*@
                    @Html.ValidationMessageFor(x => x.DESCMESA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Capacidad
                <div class="col-md-10">
                    <input class="border border-grey flex-1 p-2 mb-6 sm:mb-0 outline-none rounded sm:rounded-none sm:rounded-l text-lg w-full sm:w-auto" data-val="true"  min="1"  type="number" name="Capacidad" id="Capacidad" placeholder="Capacidad Mesa" required>
                </div>
            </div>

            <div class="form-group">
                Estado Mesa
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IDESTADOMESA, new SelectList(ViewBag.EstadoMesas, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "idEstPropuesta", @required = "required" })
                    @Html.ValidationMessageFor(model => model.IDESTADOMESA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Local
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IDLOCAL, new SelectList(ViewBag.Local, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "idEstPropuesta", @required = "required" })
                    @Html.ValidationMessageFor(model => model.IDLOCAL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Guardar</button>

                    </div>
                </div>
                <div>

                </div>
            </div>

        </div>
        <div>
            @Html.ActionLink("Volver atrás", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>