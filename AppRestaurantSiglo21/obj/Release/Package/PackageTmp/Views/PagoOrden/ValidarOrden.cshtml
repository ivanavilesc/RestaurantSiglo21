@model IEnumerable<AppRestaurantSiglo21.Models.VistaDetOrdenes>

@{
    ViewBag.Title = "Index";
    Layout = Session["Layout"].ToString();
}

<div class="container">


    <div class="card text-center">
        <div class="card-body">
            <h4>Listado Ordenes Pendientes</h4>
        </div>
    </div>
    <br />

    <p>
        @Html.ActionLink("Consultar Orden", "Index", null, new { @class = "btn btn-primary" })
    </p>

    @if (@ViewBag.Mensaje != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Mensaje
        </div>
    }
    else
    {
        <table class="table" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif">
            <tr>
                @*<th>
                        Orden
                    </th>*@
                <th>
                    Producto
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio por Producto
                </th>
                <th>
                    Total Producto
                </th>
                @*<th>
                        Total Producto
                    </th>*@

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelOrden => item.IdOrden1)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelOrden => item.DescProducto1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelOrden => item.Cantidad1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelOrden => item.PrecioProducto1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelOrden => item.Total1)
                    </td>
                    @*<td>
                            @Html.DropDownListFor(modelOrden => item.Combobox1,new SelectList(ViewBag.ComboBox, "Id1", "Descripcion1"))
                        </td>*@


                </tr>

            }
            <tr>
                <th align="center">
                    <strong>TOTAL A PAGAR : $@ViewBag.TotalPrice</strong>
                <th>
                    @Html.ActionLink("PagarOrden", "PagarOrden", new { id = Model.First().IdOrden1 }, new { @class = "btn btn-warning" })
                </th>
                </th>
            </tr>
        </table>
    }

</div>
