        <Button x:Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="325,161,0,0" VerticalAlignment="Top" Width="75" Click="BtnLimpiar_Click"/>
        <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="189,161,0,0" VerticalAlignment="Top" Width="75" Click="BtnBuscar_Click"/>
        <DataGrid x:Name="dgvDetalleOrden" HorizontalAlignment="Left" Height="100" Margin="558,81,0,0" VerticalAlignment="Top" Width="640"
                  CanUserAddRows="False" CanUserReorderColumns="False"
                  EnableRowVirtualization="false" EnableColumnVirtualization="false" ColumnWidth="*" Loaded="DgvDetalleOrden_Loaded"
                  
                  />
