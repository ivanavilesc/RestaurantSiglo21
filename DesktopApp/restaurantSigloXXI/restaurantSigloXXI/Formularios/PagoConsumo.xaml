        <TextBox x:Name="txtTotalPago" HorizontalAlignment="Left" Height="23" Margin="1078,256,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False" />
        <Label x:Name="lblTotalPago" Content="Total a pagar ordenes en efectivo" HorizontalAlignment="Left" Margin="835,252,0,0" VerticalAlignment="Top" Width="203"/>
        <Label x:Name="lblPagoTotal" Content="Pago total" HorizontalAlignment="Left" Margin="960,405,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPopina" Content="Propina" HorizontalAlignment="Left" Margin="960,457,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPagoTotal" HorizontalAlignment="Left" Height="23" Margin="1078,405,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPropina" HorizontalAlignment="Left" Height="23" Margin="1078,460,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblVuelto" Content="Vuelto" HorizontalAlignment="Left" Margin="960,505,0,0" VerticalAlignment="Top" RenderTransformOrigin="5.255,1.007"/>
        <TextBox x:Name="txtVuelto" HorizontalAlignment="Left" Height="23" Margin="1078,508,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button x:Name="btnPagar" Content="Pagar" HorizontalAlignment="Left" Margin="704,408,0,0" VerticalAlignment="Top" Width="75" Click="BtnPagar_Click"/>
        <Button x:Name="btnLimpiarPago" Content="Limpiar" HorizontalAlignment="Left" Margin="704,457,0,0" VerticalAlignment="Top" Width="75" Click="BtnLimpiarPago_Click"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="704,508,0,0" VerticalAlignment="Top" Width="75" Click="BtnSalir_Click"/>
        <GroupBox x:Name="gpbPagoConsumo" Header="Pago de consumo" HorizontalAlignment="Left" Height="213" Margin="758,371,0,0" VerticalAlignment="Top" Width="520"/>


    </Grid>
</Window>
