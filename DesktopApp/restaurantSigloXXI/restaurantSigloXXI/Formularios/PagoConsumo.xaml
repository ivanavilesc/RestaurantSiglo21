        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restaurantSigloXXI.Formularios"
        mc:Ignorable="d"
        Title="Pago Consumo" Height="750" Width="1349.978" HorizontalAlignment="Center" VerticalAlignment="Center" WindowState="Maximized">
